<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#A67A89">

        <ImageButton
            android:id="@+id/btnAddSV"
            android:layout_width="140dp"
            android:layout_height="132dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="252dp"
            android:background="#F44336"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_addsv" />

        <ImageButton
            android:id="@+id/btnListSV"
            android:layout_width="140dp"
            android:layout_height="132dp"
            android:layout_marginStart="60dp"
            android:background="#2196F3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAddSV"
            app:srcCompat="@drawable/ic_listsv" />

        <ImageButton
            android:id="@+id/btnListHP"
            android:layout_width="140dp"
            android:layout_height="132dp"
            android:layout_marginEnd="68dp"
            android:background="#FFEB3B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/btnAddHP"
            app:layout_constraintTop_toBottomOf="@+id/btnAddHP"
            app:srcCompat="@drawable/ic_listhp" />

        <ImageButton
            android:id="@+id/btnAddHP"
            android:layout_width="140dp"
            android:layout_height="132dp"
            android:layout_marginTop="252dp"
            android:layout_marginEnd="68dp"
            android:background="#8BC34A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/add_hocphan" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>